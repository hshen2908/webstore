<%- include("../partials/header") %>
<main class="flex-grow">
    <section class="max-w-none mx-auto p-4 flex-col justify-between">
        <h2 class="text-black dark:text-white text-8xl font-medium">Admin Products</h2>
        <div class="flex flex-row m-4">
            <div class="border-none rounded-lg flex w-1/2">
                <!-- <img src="" alt="" class="rounded-lg w-2/3 shadow-sm aspect-square object-cover" loading="lazy"> -->
                <div class="relative rounded-lg w-2/3 shadow-sm flex justify-center">
                    <div class="absolute flex justify-between gap-1 bottom-4">
                        <a href="#1" class="text-black opacity-50 active:opacity-100 focus:opacity-75">&#9679;</a>
                        <a href="#2" class="text-black opacity-50 active:opacity-100 focus:opacity-75">&#9679;</a>
                        <a href="#3" class="text-black opacity-50 active:opacity-100 focus:opacity-75">&#9679;</a>
                    </div>
                    <div class="rounded-lg min-w-full shadow-sm aspect-square object-cover overflow-hidden overflow-x-hidden snap-x snap-mandatory scroll-smooth flex gap-x-4">
                        
                        <div class="rounded-lg min-w-full shadow-sm bg-gray-800 aspect-square object-cover snap-center" id="1">
                        
                        </div>
                        <div class="rounded-lg min-w-full shadow-sm bg-gray-400 aspect-square object-cover snap-center" id="2">

                        </div>
                        <div class="rounded-lg min-w-full shadow-sm bg-gray-200 aspect-square object-cover snap-center" id="3">

                        </div>
                    </div>
                </div>
                
                <div class="w-1/3 p-4 flex flex-col justify-between bg-gray-100 dark:bg-gray-700 my-1 shadow-sm">
                        <h2 class="text-lg font-medium">Product Name</h2>
                        
                        <p class="text-sm font-normal">Description Lorem, ipsror eos natus accusamus eius explicabo voluptas, temporibus dolores mollitia harum.</p>
                </div>
            </div>
            <div class="w-1/2 bg-white dark:bg-black ml-4 rounded-lg shadow-sm">
                <form action="/admin/products" method="post" class="flex flex-wrap gap-4 p-4">
                    <div>
                        <label for="productCode">Code: </label>
                        <input type="text" name="productCode" id="productCode" class="form-input rounded-md">
                    </div>

                    <div>
                        <label for="productName">Name: </label>
                        <input type="text" name="productName" id="productName" class="form-input rounded-md">
                    </div>
                    
                    <div>
                        <label for="productPrice">Price: </label>
                        <input type="number" name="productPrice" id="productPrice" class="form-input rounded-md" min="0">
                    </div>

                    <div>
                        <label for="productQuantity">Quantity: </label>
                        <input type="number" name="productQuantity" id="productQuantity" class="form-input rounded-md" min="0">
                    </div>

                    <div>
                        <h3 class="">Modifiers</h3>
                        <div class="flex">
                            <input type="checkbox" name="productHidden" id="productHidden" class="peer form-checkbox rounded-md hidden" min="0">
                            <label for="productHidden" class="p-4 font-medium border-2 rounded-md peer-checked:border-blue-500 peer-active:border-blue-600">HIDDEN</label>
                        </div>

                        <div class="flex">
                            <input type="checkbox" name="productOnSale" id="productOnSale" class="peer form-checkbox rounded-md hidden" min="0">
                            <label for="productOnSale" class="p-4 font-medium border-2 rounded-md peer-checked:border-blue-500 peer-active:border-blue-600">SALE</label>
                        </div>

                        <div class="flex">
                            <input type="checkbox" name="productNewArrival" id="productNewArrival" class="peer form-checkbox rounded-md hidden" min="0">
                            <label for="productNewArrival" class="p-4 font-medium border-2 rounded-md peer-checked:border-blue-500 peer-active:border-blue-600">NEW</label>
                        </div>
                    </div>
                    

                    <button type="submit" class="text-xl font-medium bg-teal-300 text-white p-4">
                        ADD PRODUCT
                    </button>
                </form>
            </div>
        </div>
    </section>
</main>
<%- include("../partials/footer") %>
