<%- include("./partials/header") %>
<main class="flex-grow">
    <div class="w-full min-h-screen"></div>
    <%- include("./partials/filterForm") %>
    <section id="productsContainer" class="max-w-none mx-auto p-6 grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 justify-between gap-4" data-product-count="<%- (glasses.length < initialMaxProductCount ? glasses.length : initialMaxProductCount) %>" data-total-product-count="<%- glasses.length %>"">
        <%- include("./partials/productListings") %>
        
        
    </section>
    <div id="loadMoreContainer" class="flex justify-center m-4 mb-8">
        <button id="loadMoreButton" class="w-32 p-2 rounded-full bg-rose-600 active:scale-105 hover:saturate-150 transition-all flex justify-center <%- glasses.length <= initialMaxProductCount ? "hidden" : "" %>">
            <h2 id="loadMoreText" class="font-medium text-white m-2">Load More</h2>
            <svg id="loadMoreSpinner" class="animate-spin hidden" width="40" height="40" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path fill="white" d="M12,1A11,11,0,1,0,23,12,11,11,0,0,0,12,1Zm0,19a8,8,0,1,1,8-8A8,8,0,0,1,12,20Z" opacity=".25"/><path fill="white" d="M10.14,1.16a11,11,0,0,0-9,8.92A1.59,1.59,0,0,0,2.46,12,1.52,1.52,0,0,0,4.11,10.7a8,8,0,0,1,6.66-6.61A1.42,1.42,0,0,0,12,2.69h0A1.57,1.57,0,0,0,10.14,1.16Z"/>
            </svg>
        </button>
    </div>
</main>
<script src="/scripts/chooseVariant.js" defer></script>
<script src="/scripts/getProducts.js"></script>
<script src="/scripts/loadMoreButton.js" defer></script>
<script src="/scripts/hideFilterSelect.js" defer></script>
<script src="/scripts/applyFilters.js" defer></script>
<%- include("./partials/footer") %>
    